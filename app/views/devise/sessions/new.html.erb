<div class="card w-75">
  <div class="card-header text-center">
    <h2>Log in</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"email" %>
      </div>
      <br>
      <div class="field form-group">
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control",placeholder:"password" %>
      </div>
      <br>
      <% if devise_mapping.rememberable? %>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked>
          <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Remember me</label>
        </div>
      <% end %>
      <br>
      <div class="actions">
        <%= f.submit "Log in",class:"btn btn-secondary" %>
      </div>
      <br>
    <% end %>
  </div>
  <div class="card-footer text-muted">
    <%= render "devise/shared/links" %>
  </div>
</div>
